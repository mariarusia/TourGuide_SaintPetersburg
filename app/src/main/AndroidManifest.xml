<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguide_saintpetersburg">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/main_page_label"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/about_st_petersburg" />
        <activity
            android:name=".RestaurantsActivity"
            android:label="@string/restaurants" />
        <activity
            android:name=".MuseumsActivity"
            android:label="@string/museums" />
        <activity
            android:name=".PlacesActivity"
            android:label="@string/places_of_interest" />
        <activity
            android:name=".HotelActivity"
            android:label="@string/hotels"></activity>
    </application>

</manifest>